<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
     <LinearLayout
    android:id="@+id/SortByLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="5dp" 
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">
     <TextView
           android:id="@+id/sortLabel"
           android:layout_width="146dp"
           android:layout_height="wrap_content"
           android:layout_weight="3.34"
           android:text="Sort: "
           android:textAppearance="?android:attr/textAppearanceMedium" />
     
      <Spinner
             android:id="@+id/sortOrder"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />
      
    </LinearLayout>
      
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" 
	    android:paddingTop="5dp"
	    android:paddingBottom="5dp"
	    android:paddingLeft="10dp"
    	android:paddingRight="10dp">
     <TextView
           android:id="@+id/filterLabel"
           android:layout_width="146dp"
           android:layout_height="wrap_content"
           android:layout_weight="3.34"
           android:text="Filter by Category:"
           android:textAppearance="?android:attr/textAppearanceMedium" />
     
      <Spinner
             android:id="@+id/filter"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />
      
      </LinearLayout>

     <CheckBox
         android:id="@+id/convertCur"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="View in home currency"
         android:paddingTop="5dp" 
         android:paddingBottom="5dp"
         android:paddingLeft="10dp"
    	 android:paddingRight="10dp"/>
     
      <CheckBox
         android:id="@+id/onlyRec"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="View only Recurrences"
         android:paddingTop="5dp" 
         android:paddingBottom="5dp"
         android:paddingLeft="10dp"
    	 android:paddingRight="10dp"/>
    
     <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:paddingTop="5dp" 
	    android:paddingBottom="5dp"
	    android:paddingLeft="10dp"
    	android:paddingRight="10dp">
		     <TextView
		           android:id="@+id/filterLabel1"
		           android:layout_width="146dp"
		           android:layout_height="wrap_content"
		           android:layout_weight="3.34"
		           android:text="Filter by date:"
		           android:textAppearance="?android:attr/textAppearanceMedium" />
		     <RadioGroup
		        android:id="@+id/radioViewin"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"  >
		 
		        <RadioButton
		            android:id="@+id/radioAll"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="All"  />
		 
		        <RadioButton
		            android:id="@+id/radioRange"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="Date Range" />
		 
		    </RadioGroup>
      </LinearLayout>
      <LinearLayout
        android:id="@+id/dateRangeLayout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" 
	    android:paddingTop="5dp"
	    android:paddingBottom="5dp"
	    android:paddingLeft="10dp"
    	android:paddingRight="10dp">
		     
          
     <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >
           <TextView
		           android:id="@+id/fromLabel"
		           android:layout_width="0dp"
		           android:layout_height="wrap_content"
		           android:layout_weight="3.34"
		           android:text="From:"
		           android:textAppearance="?android:attr/textAppearanceMedium" />
	      <Button
	        android:id="@+id/startDate"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@android:color/transparent"
        	android:drawableLeft="@drawable/ic_action_light_cal"
	        android:onClick="processDate" />
	   </LinearLayout>
		 <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal" >
			       <TextView
				           android:id="@+id/toLabel"
				           android:layout_width="0dp"
				           android:layout_height="wrap_content"
				           android:layout_weight="3.34"
				           android:text="To: "
				           android:textAppearance="?android:attr/textAppearanceMedium" />
			      
			      <Button
			        android:id="@+id/endDate"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:background="@android:color/transparent"
		        	android:drawableLeft="@drawable/ic_action_light_cal"
			        android:onClick="processDate" />
		       </LinearLayout>   
      </LinearLayout>
     
     
      <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" 
	    android:paddingTop="5dp"
	    android:paddingBottom="5dp"
	    android:paddingLeft="10dp"
    	android:paddingRight="10dp">
	      <Button
	        android:id="@+id/saveOptions"
	        android:layout_weight="1"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:text="Save"
	        android:onClick="saveOptions" />
	      <Button
	        android:id="@+id/cancelOptions"
	        android:layout_weight="1"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:text="Cancel"
	        android:onClick="cancelOptions" />
	        
      </LinearLayout>
 	  <Button
             android:id="@+id/yahooLogo"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:paddingLeft="15dp"
             android:paddingRight="15dp"
             android:drawableRight="@drawable/ic_yahoo_logo"
             />
</LinearLayout>
