<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

   

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

       <TextView
           android:id="@+id/incomeNameLabel"
           android:layout_width="146dp"
           android:layout_height="wrap_content"
           android:layout_weight="3.34"
           android:text="Income Name :"
           android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/inputIncomeName"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName" >
            
             <requestFocus />

        </EditText>

    </LinearLayout>
    
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

       <TextView
        android:id="@+id/incomeCurrencyLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3.34"
        android:text="Currency :"
        android:textAppearance="?android:attr/textAppearanceMedium" />
        
         <Spinner
             android:id="@+id/inputIncomeCurrency"
             android:layout_width="195dp"
             android:layout_height="wrap_content" />
        
    </LinearLayout>
    
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

       <TextView
        android:id="@+id/incomeAmountLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3.34"
        android:text="Amount :"
        android:textAppearance="?android:attr/textAppearanceMedium" />
        
        <EditText
            android:id="@+id/inputIncomeAmount"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
             >

        </EditText>
        
    </LinearLayout>
    
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

       <TextView
        android:id="@+id/incomeDateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3.34"
        android:text="Date :"
        android:textAppearance="?android:attr/textAppearanceMedium" />
        
       <Button
        android:id="@+id/incPickDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       	android:background="@android:color/transparent"
        android:drawableLeft="@drawable/ic_action_calendar"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:onClick="showDatePickerDialog" /> 
        
    </LinearLayout>
     
     

     
       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

       <TextView
        android:id="@+id/incomeCatLabel"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:text="Category :"
        android:textAppearance="?android:attr/textAppearanceMedium" />
        
          <Spinner
           android:id="@+id/incSource"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_weight="3.34" />

    </LinearLayout>
      
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

       <TextView
        android:id="@+id/incomeFreqLabel"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:text="Frequency :"
        android:textAppearance="?android:attr/textAppearanceMedium" />
        
          <Spinner
              android:id="@+id/inputIncomeFreq"
              android:layout_width="183dp"
              android:layout_height="wrap_content" />

    </LinearLayout>
     <CheckBox
         android:id="@+id/inputIncNotify"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Ask before adding the recurrence ?"
         android:textAppearance="?android:attr/textAppearanceMedium" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/incomeDescLabel"
            android:layout_width="95dp"
            android:layout_height="58dp"
            android:layout_weight="0.42"
            android:text="Description (Optional) :"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/inputIncomeDesc"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName" >
        </EditText>
    </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

       <Button
        android:id="@+id/incAddSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add" />
        
        <Button
        android:id="@+id/incAddCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        />
        
    </LinearLayout>
 

</LinearLayout>