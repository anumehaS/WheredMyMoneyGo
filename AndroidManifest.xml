<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wheredmymoneygo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
   
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name="com.anumeha.wheredmymoneygo.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
         <activity
            android:name="com.anumeha.wheredmymoneygo.category.CategoryActivity"
            android:label="@string/catAct_name" />
        
        
          <activity
            android:name="com.anumeha.wheredmymoneygo.category.CategoryEditActivity"
            android:label="@string/catEditAct_name" />
        
        
           <activity
            android:name="com.anumeha.wheredmymoneygo.source.SourceActivity"
            android:label="@string/souAct_name" />
      
        
          <activity
            android:name="com.anumeha.wheredmymoneygo.source.SourceEditActivity"
            android:label="@string/souEditAct_name" />
 
        
        <activity
            android:name="com.anumeha.wheredmymoneygo.expense.ExpenseAddActivity"
            android:label="@string/expAddAct_name" />
   
        
         <activity
            android:name="com.anumeha.wheredmymoneygo.expense.ExpenseEditActivity"
            android:label="@string/expEditAct_name" >
         </activity>
      
        
          <activity
            android:name="com.anumeha.wheredmymoneygo.income.IncomeAddActivity"
            android:label="@string/incAddAct_name" />
     
        
         <activity
            android:name="com.anumeha.wheredmymoneygo.income.IncomeEditActivity"
            android:label="@string/incEditAct_name"  >
         </activity>
       
        
         <activity 
              android:name="com.anumeha.wheredmymoneygo.OptionsDialog"
           	  android:label="@string/optionsAct_name" 
              android:theme="@android:style/Theme.Holo.Dialog" />
        
          <receiver
   			 android:name="com.anumeha.wheredmymoneygo.receivers.RecEventReceiver">
   		 </receiver>
   		 
          <receiver android:name="com.anumeha.wheredmymoneygo.receivers.WmmgBootReceiver">
		    <intent-filter>
		        <action android:name="android.intent.action.BOOT_COMPLETED"></action>
		    </intent-filter>
		</receiver>
   		 
          <activity 
              android:name="com.anumeha.wheredmymoneygo.services.WmmgAlarmManager"
           	  android:label="@string/alarmAct_name" 
              android:theme="@android:style/Theme.NoDisplay" />
          <activity 
              android:name="com.anumeha.wheredmymoneygo.expense.ExpenseAlarmManager"
           	  android:label="@string/expAlarmAct_name" 
              android:theme="@android:style/Theme.NoDisplay" />
          <activity 
              android:name="com.anumeha.wheredmymoneygo.income.IncomeAlarmManager"
           	  android:label="@string/incAlarmAct_name" 
              android:theme="@android:style/Theme.NoDisplay" />
         
    </application>

</manifest>
